    <script>

        $(document).ready(function () {
            debugger;
            $(":input").inputmask();
            
            ////Inputmask().mask(document.querySelectorAll("input"));
            $("#addFolioBtn").button().click(function () { AsignFolioToPerson(); });
            var url = "@Html.Raw(Url.Action("NewChart", "AsignarFolios"))"
            LoadChart(url);

            

                //$("#folioInTxt").inputmask({
                //    mask: "9{6}",
